
extends layout

block content

      div

          nav.nav
                ul
                      li
                            a(href="/My_Cart" id="mycart") My cart
                      li
                            a(href='#Garden-vegetables') Garden vegetables
                      li
                            a(href='#Lettuce') Lettuce
                      li
                            a(href='#Herbs') Herbs
                      li
                            a(href='#Mushrooms') Mushrooms


      .content
            h1 Garden vegetables
            .row(id="Garden-vegetables")
                  each veg in gv
                         .card
                              .card-title
                              p #{veg.name}
                              img.cardImage(src = veg.image )
                              p #{veg.price}₪  per kg
                              br
                              input(type="number",value=1)
                              button.button add
            h1 Lettuce
            .row(id="Lettuce")
                  each veg in lettuce
                        .card
                              .card-title
                              p #{veg.name}
                              img.cardImage(src = veg.image )
                              p #{veg.price}₪  per kg
                              br
                              input(type="number",value=1)
                              button.button add
            h1 Herbs
            .row(id="Herbs")
                  each veg in herb
                        .card
                              .card-title
                              p #{veg.name}
                              img.cardImage(src = veg.image)
                              p #{veg.price}₪  per kg
                              br
                              input(type="number",value=1)
                              button.button add

            h1 Mushrooms
            .row(id="Mushrooms")
                  each veg in mushrooms
